<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fond_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        android:text="Seleccione Origen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cbOrigen"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="13dp"
        android:entries="@array/origen"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="108dp"
        android:text="Seleccione Destino"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cbDestino"
        android:layout_width="376dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="13dp"
        android:entries="@array/destino"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="333dp"
        android:background="@drawable/btn_secondary"
        android:text="Limpiar"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="334dp"
        android:background="@drawable/btn_principal"
        android:text="Calcular"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="345dp"
        android:layout_height="273dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37dp"
        android:layout_marginBottom="41dp"
        android:text=""
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/rgServicios"
        android:layout_width="377dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="197dp">

        <RadioButton
            android:id="@+id/rbEmpresas"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Empresa" />

        <RadioButton
            android:id="@+id/rbPersona"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Persona Natural" />
    </RadioGroup>
</RelativeLayout>